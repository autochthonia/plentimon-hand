{
  "name": "plentimon-hand",
  "version": "1.0.0",
  "description": "an orchestrator for plentimon",
  "main": "libs/plentimon.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:rollup && build:types && npm run build:js",
    "build:rollup": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/autochthonia/plentimon-hand.git"
  },
  "keywords": [
    "plentimon",
    "exalted3",
    "typescript",
    "discord.js",
    "babel"
  ],
  "author": "autochthonia",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/autochthonia/plentimon-hand/issues"
  },
  "homepage": "https://github.com/autochthonia/plentimon-hand#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.13",
    "@types/lodash": "^4.14.126",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.8.0",
    "eslint": "^5.16.0",
    "jest": "^24.8.0",
    "regenerator-runtime": "^0.13.2",
    "rollup": "^1.11.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.4",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "discord.js": "^11.5.0"
  }
}
